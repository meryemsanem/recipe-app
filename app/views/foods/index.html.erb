<div class="foods-container">
  <h1>Foods</h1>
  <div class="add-food-btn">
    <%= link_to "Add food", new_food_path, class: "add-food" %>
  </div>
  <div class="foods">
    <% if @foods.empty? %>
      <p>No foods available.</p>
    <% else %>
      <table class="foods-table">
        <thead class="table-head">
          <tr class="food-head">
            <th>Food</th>
            <th>quantity</th>
            <th>Measurement Unit</th>
            <th>Unit Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
            <tr class="custom-table-row">
              <td class="food-names">
                <%= link_to food.name, food_url(current_user.id, food.id) %>
              </td>
              <td><%= food.quantity %></td>
              <td><%= food.measurement_unit %></td>
              <td><span>$<%= food.price %></td></span>
              <td>
                <%= button_to "Delete",
                  food_path(food.id), method: :delete,
                  data: { confirm: "Delete food?" }, class: "delete-food" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>