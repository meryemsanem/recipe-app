<h1 class="new">Edit Recipe Food</h1>

<div class="container">
  <% if flash[:error].present? %>
    <div class="alert">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= form_with model: @recipe_food, url: recipe_recipe_food_path(@recipe, @recipe_food), method: :patch do |form| %>
    <div class="form-group">
      <%= form.label :food_id, "Food" %>
      <%= form.collection_select :food_id, @foods, :id, :name, { prompt: "Select new item" }, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.label :quantity, "Quantity" %>
      <%= form.number_field :quantity, class: "input" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Recipe Food", class: "submit-btn-edit" %>
      <%= link_to "Cancel", recipe_path(@recipe), class: "submit-btn-edit" %>
    </div>
  <% end %>
</div>
